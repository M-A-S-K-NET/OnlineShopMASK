@model IEnumerable<OnlineShopMASK.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/ProductImages/11cbf337-e361-4ec9-a58d-3b336c442a30.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/ProductImages/603f9174-1697-454a-b39d-ebe1d6829c28.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/ProductImages/c9e75c57-9779-4e81-acef-be8cfe38d5be.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

<h2> All Products </h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4" style="height:800px;">
                <div class="card border-dark mb-1" style="height:750px;">
                    <img class="card-img-top" style="height:150px" src="~/Content/ProductImages/@item.Image" />
                    <div class="card-body">
                        <h5 class="card-title" style="height:100px">
                            <strong>
                                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                            </strong>
                        </h5>
                        <p class="card-text" style="height:300px">@item.Description</p>
                        <p class="card-text" style="height:50px"><strong>Price:</strong>@item.Price</p><hr />

                        <a href="@Url.Action("AddToBasket", "Basket", new { Id=item.Id})" class="btn btn-primary">Add to Basket</a>

                    </div>
                </div>
            </div>

