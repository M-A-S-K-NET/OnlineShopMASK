<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <script src="~/Scripts/popper.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="container-fluid" style="padding-left:50px">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="~/Content/ProductImages/masklogo.png" alt="Logo" style="width:120px;" />
        </a>
        <div  class=" float-right mt-2 mr-4">
            <a class="" href="@Url.Action("Index","Basket")">
                <i class="fa fa-shopping-cart fa-2x "></i>
            </a>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">

        <div class="container">
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("All Products", "Index", "ProductView", null, new { @class = "nav-link" })</li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin") || User.IsInRole("Customer"))
                        {
                            <li class="nav-item">@Html.ActionLink("ProductAdmin", "Index", "ProductManager", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("CategoryAdmin", "Index", "ProductCategoryManager", null, new { @class = "nav-link" })</li>
                        }
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
       
    </div>
    <footer>
        <div class="Footer-Main-container modal-footer alert-dark">

            <div class="row">
                <div class="col-md-3">
                    
                    <ul style="list-style-type:none">
                        <li><h4 class="card-title">About Us</h4></li>
                        <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Terms Of Purchase", "Conditions", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home", null, new { @class = "nav-link" })</li>

                    </ul>
                </div>

                <div class="col-md-3">
                    
                    <ul style="list-style-type: none;">
                        <li><h4 class="card-title">Customer Service</h4></li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Return & Repair", "Warranty", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })</li>
                    </ul>
                </div>

                <div class="col-md-3">
                    
                    <ul style="list-style-type: none;">
                        <li><h4 class="card-title">Payments</h4></li>
                        <li><a href="#" class="card-link"><img src="~/Content/ProductImages/PayPal.png" height="70" width="70" alt="PayPal" class="img-thumbnail"></a></li>
                        <li><a href="#" class="card-link"><img src="~/Content/ProductImages/CreditCard.jpg" height="20" width="70" alt="Credit Card" class="img-thumbnail"></a></li>
                        <li><a href="#" class="card-link"><img src="~/Content/ProductImages/Mastercard.png" height="70" width="70" alt="Master Card" class="img-thumbnail"></a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/ProductImages/masklogo.png" alt="Logo" style="width:120px;" />
                    </a>
                    <p>
                        We use cookies to increase user-friendliness in accordance with the Electronic Communications Act.

                    </p>
                    <a target="_parent" href="https://dhandel.se/trygg-e-handel/certifierade-e-handlare/97/">
                        <img src="~/Content/ProductImages/Garanti.jpg" alt="Logo" style="width:120px;" />
                    </a>


                </div>
            </div>

        </div>
        <div class="Bottom-container">
            <div class="row">
                <div class="col-md-12 text-center">
                    @*<div class="card">
                        <div class="card-body">*@
                    <h4 @*class="card-title"*@>Delivery And Gurantee</h4>
                    <a href="#"><img src="~/Content/ProductImages/logo-DHL.png" height="70" width="70" alt="DHL" class="img-thumbnail"></a>
                    <a href="#"><img src="~/Content/ProductImages/Best.png" height="70" width="70" alt="Best" class="img-thumbnail"></a>
                    <a href="#"><img src="~/Content/ProductImages/Budbee.png" height="70" width="70" alt="Budbee" class="img-thumbnail"></a>
                    @*</div>
                        </div>*@
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
