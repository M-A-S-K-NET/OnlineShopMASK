<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="Main-container">
            @Html.ActionLink("OnlineShopMASK", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        <div class="Footer-Main-container">
                
        <div class="row">
          <div class="col-md-3">
             <div class="card" style="height:15rem;">
                <div class="card-body">                                
                   <h4 class="card-title">Customer Information</h4>
                     <ul>
                     <li><a href="#" class="card-link">Conditions</a></li>
                     <li><a href="#" class="card-link">Privacy Policy</a></li>
                     <li><a href="#" class="card-link">Our Services</a></li>
                     </ul>
                                
                </div>
              </div>
           </div>

           <div class="col-md-3">
             <div class="card" style="height:15rem;">
               <div class="card-body">
                 <h4 class="card-title">Customer Service</h4>
                   <ul>
                   <li><a href="~/Views/Html Pages/Contact.html" class="card-link">Contact</a></li>
                   <li><a href="~/Views/Html Pages/Contact.html" class="card-link">Warranty & Repair</a></li>
                   <li><a href="https://support.netonnet.se/hc/sv/articles/360001163225-Vanliga-fr%C3%A5gor-och-svar" class="card-link">FAQ</a></li>
                   </ul>
               </div>
             </div>
           </div>

           <div class="col-md-3">
             <div class="card" style="height:15rem;">
               <div class="card-body">
                 <h4 class="card-title">About Mask</h4>
                  <ul>
                  <li><a href="https://support.netonnet.se/hc/sv/articles/360001159809" class="card-link">About Us</a></li>
                   </ul>
               </div>
             </div>
           </div>

           <div class="col-md-3">
               <div class="card" style="height:15rem;">
                   <div class="card-body">
                       <h4 class="card-title">Payments</h4>
                       <ul>
                           <li><a href="#" class="card-link"><img src="~/Content/ProductImages/PayPal.png" height="70" width="70" alt="PayPal" class="img-thumbnail"></a></li>
                           <li><a href="#" class="card-link"><img src="~/Content/ProductImages/CreditCard.jpg" height="20" width="70" alt="Credit Card" class="img-thumbnail"></a></li>
                           <li><a href="#" class="card-link"><img src="~/Content/ProductImages/Mastercard.png" height="70" width="70" alt="Master Card" class="img-thumbnail"></a></li>
                       </ul>
                   </div>
               </div>
           </div>                 
        </div>
        </div>
        <br />

        <div class="Bottom-container">
        <div class="row">
        <div class="col-md-12 text-center" >                      
           @*<div class="card">
             <div class="card-body">*@
              <h4 @*class="card-title"*@>Delivery And Gurantee</h4>
               <a href="#"><img src="~/Content/ProductImages/logo-DHL.png" height="70" width="70" alt="DHL" class="img-thumbnail"></a>
               <a href="#"><img src="~/Content/ProductImages/Best.png" height="70" width="70" alt="Best" class="img-thumbnail"></a>
               <a href="#"><img src="~/Content/ProductImages/Budbee.png" height="70" width="70" alt="Budbee" class="img-thumbnail"></a>
             @*</div>
           </div>*@
        </div>
        </div>
        </div>




</footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
