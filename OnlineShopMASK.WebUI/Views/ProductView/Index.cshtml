@model OnlineShopMASK.Core.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Index";
}

    <div class="row">
        <div class="col-md-2">
            <h4>Select Filter</h4>
            <div class="list-group">
                @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item active" : "list-group-item" })
                @foreach (var cat in Model.ProductCategory)
                {
                    @Html.ActionLink(cat.Category, "Index", new { Category = cat.Category }, new { @class = Request["Category"] == cat.Category ? "list-group-item active" : "list-group-item" })
                }
            </div>
        </div>
        
            @foreach (var item in Model.Products)
            {
                <div class="col-md-4" style="height:250px; padding:10px; margin:10px; border:solid thin whitesmoke">
                    <div class="col-md-12">
                        <img class="img" style="height:150px" src="~/Content/ProductImages/@item.Image" />
                    </div>
                    <div class="col-md-12">
                        <strong>
                            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                        </strong>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Description</p>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Price</p>
                    </div>
                    <div class="col-md-12">
                        <a href="#" class="btn btn-primary">Add to cart</a>
                    </div>

                </div>
            }
       
    </div>
    

       

 

<div class="col-md-12 clearfix">

</div>



