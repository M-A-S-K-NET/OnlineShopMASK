                    </div>
                    <div class="col-md-12">
                        <strong>
                            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                        </strong>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Description</p>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Price</p>
                    </div>
                    <div class="col-md-12">
                        <a href="#" class="btn btn-light">Add to cart</a>
                    </div>
                </div>*@
                <div class="col-sm-4" style="height:800px;">
                    <div class="card border-dark mb-1">
                        <img class="card-img-top" style="height:150px" src="~/Content/ProductImages/@item.Image" />
                        <div class="card-body">
                            <h5 class="card-title">
                                <strong>
                                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                                </strong>
                            </h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.Price</p>
                            <a href="#" class="btn btn-primary">Add to cart</a>
