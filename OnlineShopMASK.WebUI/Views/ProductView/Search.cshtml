@model IEnumerable<OnlineShopMASK.Core.Models.Product>

@{
    ViewBag.Title = "Search";
}


<h2>search</h2>
<form asp-controller="ProductView" asp-action="Index">
    <p>
        <input type="text" name="searchString">
        <input type="submit" value="Search" />
    </p>
</form>

  @foreach (var item in Model)
{

    <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border:solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <strong>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>

        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to cart</a>
        </div>
    </div>


}
<div class="col-md-12 clearfix">

</div>
